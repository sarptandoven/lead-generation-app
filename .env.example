# API Settings
PROJECT_NAME=Lead Generation API
API_V1_STR=/api/v1

# Security
SECRET_KEY=your-secret-key-here  # Generate using: openssl rand -hex 32
ACCESS_TOKEN_EXPIRE_MINUTES=11520  # 8 days

# Database
POSTGRES_SERVER=localhost  # Change to your DB host for production
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your-db-password
POSTGRES_DB=leadgen

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]

# LinkedIn
LINKEDIN_EMAIL=your-linkedin-email
LINKEDIN_PASSWORD=your-linkedin-password

# OpenAI
OPENAI_API_KEY=your-openai-api-key

# Email Settings
SMTP_TLS=True
SMTP_PORT=587
SMTP_HOST=smtp.gmail.com
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-email-password
EMAILS_FROM_EMAIL=your-email@gmail.com
EMAILS_FROM_NAME=Your Name

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Application Settings
LOG_LEVEL=INFO
MAX_WORKERS=4
MAX_RETRIES=5

# Deployment Settings
PORT=8000
HOST=0.0.0.0

# JWT Secret for authentication
JWT_SECRET=your_jwt_secret_here

# Flask configuration
FLASK_APP=app.py
FLASK_ENV=production

# Frontend configuration
REACT_APP_API_URL=http://localhost:5000 